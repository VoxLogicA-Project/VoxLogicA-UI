{
	"name": "voxlogica-ui",
	"version": "1.0.0",
	"private": true,
	"license": "GPL-3.0-or-later",
	"main": "main.js",
	"build": {
		"appId": "org.voxlogica.ui",
		"productName": "VoxLogicA-UI",
		"files": [
			"dist/**/*",
			"node_modules/**/*",
			"package.json",
			"main.js"
		],
		"directories": {
			"buildResources": "build"
		},
		"mac": {
			"target": "dmg"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage"
		}
	},
	"scripts": {
		"dev": "vite dev",
		"app": "electron .",
		"build-pkg": "electron-builder",
		"single-file:mac-arm": "electron-packager . VoxLogicA-UI --platform=darwin --arch=arm64 --out=dist --overwrite",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^28.0.2",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@skeletonlabs/skeleton": "^2.10.3",
		"@skeletonlabs/tw-plugin": "^0.4.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^5.2.10",
		"@sveltejs/kit": "^2.8.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.6",
		"@types/node": "22.9.0",
		"@vitest/coverage-v8": "2.1.8",
		"autoprefixer": "10.4.20",
		"electron": "^34.0.1",
		"electron-builder": "^25.1.8",
		"electron-packager": "^17.1.2",
		"express": "^4.21.2",
		"jsdom": "^25.0.1",
		"picomatch": "^4.0.2",
		"postcss": "8.4.49",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.8",
		"rollup": "^4.28.1",
		"svelte": "^5.2.3",
		"svelte-check": "^4.0.9",
		"tailwindcss": "3.4.15",
		"typescript": "^5.6.3",
		"vite": "^5.4.11",
		"vitest": "^2.1.8"
	},
	"type": "module",
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
	"dependencies": {
		"@floating-ui/dom": "^1.6.12",
		"@lezer/common": "^1.0.0",
		"@lezer/highlight": "^1.2.1",
		"@niivue/niivue": "^0.46.0",
		"@thisux/sveltednd": "^0.0.19",
		"codemirror": "^6.0.1",
		"svelte-awesome-color-picker": "^3.1.4",
		"ts-debounce": "^4.0.0",
		"vite-plugin-tailwind-purgecss": "^0.3.3"
	}
}